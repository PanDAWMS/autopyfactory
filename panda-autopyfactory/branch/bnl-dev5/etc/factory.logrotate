/var/log/apf/apf.log {
  missingok
  notifempty
  sharedscripts
  size 500M
  rotate 6
  # we are going to sleep 3+3 seconds to let the TCP socket to close properly before restarting the apf service,
  # otherwise it may happen that the factory resumes activities while the old TCP socket is still managing packages
  # and everything blows out
  prerotate
    [ -e /etc/init.d/factory ] && /etc/init.d/factory stop >/dev/null 2>&1 || true
    sleep 3
  endscript
  postrotate
    sleep 3
    [ -e /etc/init.d/factory ] && /etc/init.d/factory start >/dev/null 2>&1 || true
  endscript
}
