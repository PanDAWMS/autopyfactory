#!/usr/bin/env python
#
# Very simple wrapper to go in /usr/bin to be executed by init script. 
#
from autopyfactory.factory import FactoryCLI 

def main():
    '''
    Simplest possible invocation of AutoPyFactory program. Does not have the .py extension
    to keep the RPM building system happy. 
    '''
    apf = FactoryCLI()
    apf.parseopts()
    apf.setuplogging()
    apf.setuppandaenv()
    apf.checkroot()
    apf.createconfig()
    apf.mainloop()
        
if __name__ == "__main__":
    main()
